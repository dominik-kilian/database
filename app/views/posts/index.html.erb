<%= link_to 'Add New Post', new_post_path %>

<h1>Posts</h1>
<table>
  <tr>
    <th>Post ID</th>
    <th>User ID</th>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.user_id %></td>
      <td><%= link_to post.title, post_path(post) %></td>
      <td><%= link_to post.body, post_path(post)%></td>
      
      
    </tr>
  <% end %>
</table>